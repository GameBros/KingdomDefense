if ( instance_exists(oCursor) )
{
    x = oCursor.x;
    y = oCursor.y;
}

if( mouse_check_button_released(mb_left) )
{
    released = true;
}

//Snapping to a slot?
sl = instance_nearest(x,y,oSlot);
slotFree = (sl.myObject == noone &amp;&amp; sl.unlocked);

if( ind == 15 )
{
    //Potion
    slotFree = !slotFree;
    
    if( slotFree )
    {
        slotFree = sl.myUnit.myGroup &lt;= 13;         
    }
}

if ( y &gt; sl.y-70 &amp;&amp; slotFree &amp;&amp; abs(x-sl.x) &lt; 40 )
{
    x = sl.x;
    y = sl.y;
    
    state = 1;
}

draw_sprite(sprite_index,3,x-( round(sprite_get_width(sprite_index)/2) ),y-(bbox_bottom-bbox_top)+15);

//Draw slots
with oSlot
{
    if(!instance_exists(myObject) &amp;&amp; unlocked)
    {
        draw_sprite(sUnitSlot,-1,x,y);
    }
}

if ( mouse_check_button_pressed(mb_left) &amp;&amp; released )
{
    if ( state == 0 )
    {
        myCard.dragObj = noone;
    }
    else
    {     
        if( ind == 15 )
        {
            //Potion
            scrActorDamage(sl.myObject,id,1,1,1,false,c_lime); 
        }
        else
        {
            unit = instance_create(x,y,scrGetUnitObj(ind));
            unit.myWeapon = 0;
            unit.mySlot = sl;        
            sl.myObject = unit;
            global.canChooseUnit = false;
        }
        
        global.crystals -= price;
    }
    instance_destroy();
}
